@model WebFPTShop.Models.OrderPro

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Chi tiết đơn hàng";
}

<p><strong>Mã đơn hàng:</strong> @Model.ID</p>
<p><strong>Khách hàng:</strong> @Model.Customer.NameCus</p>
<p><strong>Ngày đặt hàng:</strong> @Model.DateOrder</p>
<p><strong>Địa chỉ giao hàng:</strong> @Model.AddressDeliverry</p>

<h3>Các sản phẩm</h3>
<table class="table">
    <thead>
        <tr>
            <th>Hình ảnh</th>
            <th>Sản phẩm</th>
            <th>Số lượng</th>
            <th>Đơn giá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var detail in Model.OrderDetails)
        {
            <tr>
                <td><img src="@detail.Product.ImagePro" alt="@detail.Product.NamePro" style="max-height: 100px;"/></td>
                <td>@detail.Product.NamePro</td>
                <td>@detail.Quantity</td>
                <td>@detail.UnitPrice</td>
            </tr>
        }
    </tbody>
</table>
<div class="form-group">
    @Html.ActionLink("Quay lại", "Index")
</div>

