@model WebFPTShop.Models.Manufacturer
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Kết hợp với _AdminLayout
    ViewBag.Title = "Chỉnh sửa nhà sản xuất";
}

@using (Html.BeginForm("Edit", "AdminManufacturer", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.IDManu) <!-- Dòng này để lưu giá trị IDCate -->

    <div class="form-group">
        @Html.LabelFor(model => model, "Tên nhà sản xuất", new { @class = "control-label" })
        <div class="input-group">
            @Html.EditorFor(model => model.NameManu, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.NameManu, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
    </div>
}

