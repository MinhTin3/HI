@model WebFPTShop.Models.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Kết hợp với _AdminLayout
    ViewBag.Title = "Chỉnh sửa danh mục";
}

@using (Html.BeginForm("Edit", "AdminCategory", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.IDCate) <!-- Dòng này để lưu giá trị IDCate -->

    <div class="form-group">
        @Html.LabelFor(model => model.NameCate, "Tên danh mục", new { @class = "control-label" })
        <div class="input-group">
            @Html.EditorFor(model => model.NameCate, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.CateIcon, "Icon danh mục", new { @class = "control-label" })
        <div class="input-group">
            @Html.EditorFor(model => model.CateIcon, new { @class = "form-control", @id = "iconInput" })
        </div>
        <div class="icon-preview" id="iconPreview">

        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-default" })
    </div>
}


