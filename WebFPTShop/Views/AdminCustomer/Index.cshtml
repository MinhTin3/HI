@model IEnumerable<WebFPTShop.Models.Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Danh sách khách hàng";
}



<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên khách hàng</th>
            <th>Số điện thoại</th>
            <th>Email</th>
            <th>Địa chỉ</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@customer.IDCus</td>
            <td>@customer.NameCus</td>
            <td>@customer.PhoneCus</td>
            <td>@customer.EmailCus</td>
            <td>@customer.AddressCus</td>
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = customer.IDCus }, new { @class = "btn btn-primary btn-sm" })

           
            </td>
        </tr>
        }
    </tbody>
</table>
