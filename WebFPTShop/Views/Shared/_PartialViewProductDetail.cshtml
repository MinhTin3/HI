<!-- product-title -->
<div class="product-title">
    <div class="product-title-left">
        <h1>@Model.NamePro</h1>
        <span>(No.00824253)</span>
    </div>
    <div class="product-title-right">
        <div class="rating-container">
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
            <i class="fa-solid fa-star"></i>
