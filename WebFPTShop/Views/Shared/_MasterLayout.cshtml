    <div id="popup" class="popup">
        <div class="popup-content">
            <span class="popup-close" id="popup-close"><i class="fa-solid fa-xmark"></i></span>
            <h2>Chọn tùy chọn</h2>
            <div class="group-link">
                @Html.ActionLink("Đăng nhập", "Login", "Home", null, new { id = "btn-login", @class = "popup-link" })
                @Html.ActionLink("Đăng ký", "Register", "Home", null, new { id = "btn-register", @class = "popup-link" })
            </div>
        </div>
    </div>
    <script>
        var popup = document.getElementById("popup");
        var openPopupButton = document.getElementById("open-popup");
        var popupClose = document.getElementById("popup-close");

        openPopupButton.onclick = function () {
            popup.style.display = "block";
        };


        // Đóng popup khi nút "X" được nhấn hoặc khi bất kỳ nơi nào ngoài popup được nhấn
        popupClose.onclick = function () {
            popup.style.display = "none";
        };

        window.onclick = function (event) {
            if (event.target === popup) {
                popup.style.display = "none";
            }
        };
    </script>
