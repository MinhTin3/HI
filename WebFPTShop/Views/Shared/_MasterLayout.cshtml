                <a class="nav-link" href="~/Home/ViewCart">
                    <i class="fa-solid fa-cart-shopping"></i>
                    <span> Giỏ hàng</span>
                </a>
            </div>
            <div class="function-item">
                <a class="nav-link" href="~/AdminUser/Login">
